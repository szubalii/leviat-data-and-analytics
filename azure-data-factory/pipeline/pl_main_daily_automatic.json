{
	"name": "pl_main_daily_automatic",
	"properties": {
		"activities": [
			{
				"name": "If environment is prod",
				"type": "IfCondition",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@if(equals(pipeline().globalParameters.environment,'prod'),true,false)",
						"type": "Expression"
					},
					"ifTrueActivities": [
						{
							"name": "Main Daily ETL",
							"type": "ExecutePipeline",
							"dependsOn": [
								{
									"activity": "Resume Synapse Dedicated SQL Pool",
									"dependencyConditions": [
										"Succeeded"
									]
								},
								{
									"activity": "Start VM",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"pipeline": {
									"referenceName": "pl_main_daily_etl_process",
									"type": "PipelineReference"
								},
								"waitOnCompletion": true,
								"parameters": {
									"date": {
										"value": "@formatDateTime(pipeline().TriggerTime, 'yyyy/MM/dd')",
										"type": "Expression"
									},
									"rerun_successful_full_entities": {
										"value": "@pipeline().parameters.rerun_successful_full_entities",
										"type": "Expression"
									},
									"entity_filter": {
										"value": "@pipeline().parameters.entity_filter",
										"type": "Expression"
									},
									"pbi_entity_filter": {
										"value": "@pipeline().parameters.pbi_entity_filter",
										"type": "Expression"
									}
								}
							}
						},
						{
							"name": "Resume Synapse Dedicated SQL Pool",
							"type": "ExecutePipeline",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"pipeline": {
									"referenceName": "pl_SYNDW_resume",
									"type": "PipelineReference"
								},
								"waitOnCompletion": true
							}
						},
						{
							"name": "Pause Synapse Dedicated SQL Pool",
							"type": "ExecutePipeline",
							"dependsOn": [
								{
									"activity": "Main Daily ETL",
									"dependencyConditions": [
										"Succeeded",
										"Failed"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"pipeline": {
									"referenceName": "pl_SYNDW_pause",
									"type": "PipelineReference"
								},
								"waitOnCompletion": true,
								"parameters": {
									"SynapseServerName": {
										"value": "@pipeline().globalParameters.synapseServerName",
										"type": "Expression"
									},
									"SynapseDatabaseName": {
										"value": "@pipeline().globalParameters.synapseDatabaseName",
										"type": "Expression"
									},
									"ResourceGroupName": {
										"value": "@pipeline().globalParameters.resourceGroupName",
										"type": "Expression"
									}
								}
							}
						},
						{
							"name": "Start VM",
							"type": "ExecutePipeline",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"pipeline": {
									"referenceName": "pl_VM_start",
									"type": "PipelineReference"
								},
								"waitOnCompletion": true
							}
						},
						{
							"name": "Deallocate VM",
							"type": "ExecutePipeline",
							"dependsOn": [
								{
									"activity": "Main Daily ETL",
									"dependencyConditions": [
										"Succeeded",
										"Failed"
									]
								}
							],
							"userProperties": [],
							"typeProperties": {
								"pipeline": {
									"referenceName": "pl_VM_deallocate",
									"type": "PipelineReference"
								},
								"waitOnCompletion": true
							}
						}
					]
				}
			}
		],
		"parameters": {
			"entity_filter": {
				"type": "string"
			},
			"pbi_entity_filter": {
				"type": "string"
			},
			"rerun_successful_full_entities": {
				"type": "string"
			}
		},
		"folder": {
			"name": "10 Manage"
		},
		"annotations": []
	}
}