{
	"name": "pl_ADLS_SYNDW_csv_ingest",
	"properties": {
		"activities": [
			{
				"name": "Copy data from csv to base layer",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "SqlDWSink",
						"preCopyScript": {
							"value": "IF EXISTS (SELECT * FROM dbo.sysobjects WHERE ID = OBJECT_ID(N'@{Concat(pipeline().parameters.base_schema_name, '.', pipeline().parameters.base_table_name)}'))\nTRUNCATE TABLE @{Concat(pipeline().parameters.base_schema_name, '.', pipeline().parameters.base_table_name)}",
							"type": "Expression"
						},
						"allowCopyCommand": true,
						"disableMetricsCollection": false
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "ds_adls_csv",
						"type": "DatasetReference",
						"parameters": {
							"container": {
								"value": "@pipeline().parameters.container",
								"type": "Expression"
							},
							"directory": {
								"value": "@pipeline().parameters.directory",
								"type": "Expression"
							},
							"file_name": {
								"value": "@pipeline().parameters.file_name",
								"type": "Expression"
							},
							"field_delimiter": {
								"value": "@pipeline().parameters.field_delimiter",
								"type": "Expression"
							},
							"storageAccount": {
								"value": "@pipeline().globalParameters.storageAccountName",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "ds_syndw_table",
						"type": "DatasetReference",
						"parameters": {
							"schema": {
								"value": "@pipeline().parameters.base_schema_name",
								"type": "Expression"
							},
							"table": {
								"value": "@pipeline().parameters.base_table_name",
								"type": "Expression"
							},
							"sqlPool": {
								"value": "@pipeline().globalParameters.synapseDatabaseName",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"container": {
				"type": "string",
				"defaultValue": "tx-halfen-2-dwh-uat"
			},
			"directory": {
				"type": "string",
				"defaultValue": "DIM_VENDTABLE/Archive/"
			},
			"file_name": {
				"type": "string",
				"defaultValue": "*"
			},
			"field_delimiter": {
				"type": "string",
				"defaultValue": ";"
			},
			"base_schema_name": {
				"type": "string",
				"defaultValue": "base_tx_halfen_2_dwh"
			},
			"base_table_name": {
				"type": "string",
				"defaultValue": "DIM_VENDTABLE_Archive"
			}
		},
		"folder": {
			"name": "80 Manual"
		},
		"annotations": []
	}
}