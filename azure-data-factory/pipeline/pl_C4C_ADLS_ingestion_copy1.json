{
	"name": "pl_C4C_ADLS_ingestion_copy1",
	"properties": {
		"activities": [
			{
				"name": "Copy C4C to ADLS",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "SapCloudForCustomerSource",
						"httpRequestTimeout": "00:05:00"
					},
					"sink": {
						"type": "ParquetSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "ParquetWriteSettings"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "ds_sap_c4c",
						"type": "DatasetReference",
						"parameters": {
							"path": {
								"value": "@pipeline().parameters.entity_name",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "ds_adls_parquet_file",
						"type": "DatasetReference",
						"parameters": {
							"container": {
								"value": "@pipeline().parameters.adls_container_name",
								"type": "Expression"
							},
							"directory": {
								"value": "@concat(\n    pipeline().parameters.entity_name,\n    '/In/',\n    formatDateTime(utcNow(),'yyyy/MM/dd')\n)",
								"type": "Expression"
							},
							"file": {
								"value": "@pipeline().parameters.file_name",
								"type": "Expression"
							},
							"storageAccount": {
								"value": "@pipeline().globalParameters.storageAccountName",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"entity_name": {
				"type": "string",
				"defaultValue": "OpportunityCollection"
			},
			"file_name": {
				"type": "string",
				"defaultValue": "OpportunityCollection_2023_01_11_13_15_34_082.parquet"
			},
			"adls_container_name": {
				"type": "string",
				"defaultValue": "c4c"
			}
		},
		"folder": {
			"name": "00 ELT/01 ADLS Ingestion/C4C"
		},
		"annotations": []
	}
}